extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert-success(5000)
    +alert-error(5000)
    h1(class="mb-4") Phân quyền 
    //- div #{record}
    if(record)
        div(data-records = record)
        div(class="text-right")
            button(
                type="submit"
                class="btn btn-primary mb-1"
                button-submit 
        ) Cập nhật
        table(
            class="table table-hover table-sm"
            table-permission
        )
            thead 
                tr 
                    th Tính năng 
                    each item in record
                        th(class="text-center") #{item.title}
            tbody 
                tr(data-name="id" class="d-none")
                    td 
                    each item in record
                        td(class="text-center")
                            input(
                                type="text"
                                value= item.id
                            )
                //- Danh mục sản phẩm
                tr 
                    td(colspan="4") 
                        b Danh mục sản phẩm
                tr(data-name="products-category_view")
                    td Xem
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products-category_create")
                    td Thêm mới
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products-category_edit")
                    td Chỉnh sửa
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products-category_delete")
                    td Xóa
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")

                //- Sản phẩm
                tr 
                    td(colspan="4") 
                        b Sản phẩm
                tr(data-name="products_view")
                    td Xem
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products_create")
                    td Thêm mới
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products_edit")
                    td Chỉnh sửa
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products_delete")
                    td Xóa
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                
                //- Phân quyền
                tr 
                    td(colspan="4") 
                        b Nhóm quyền
                tr(data-name="roles_view")
                    td Xem
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="roles_create")
                    td Thêm mới
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="roles_edit")
                    td Chỉnh sửa
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="roles_delete")
                    td Xóa
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="roles_permission")
                    td Phân quyền
                    - for(let i = 0; i < record.length ; i++)
                        td(class="text-center")
                            input(type="checkbox")
    else 
        div(class="text-right")
            a(
                href=`${prefixAdmin}/roles/create`
                type="submit"
                class="btn btn-primary mb-1"
                button-submit 
        ) Thêm mới
    form(
        id="form-change-permission"
        action=`${prefixAdmin}/roles/permission?_method=PATCH`
        method="POST"
        class="d-none"
    )   
        div(class = "form-group")
            input(
                type="text"
                name="permission"
                class="form-control"
            )
    script(src="/admin/js/roles.js") 