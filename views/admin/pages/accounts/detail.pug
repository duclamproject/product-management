extends ../../layouts/default.pug
include ../../mixins/moment.pug
block main 
    //- div #{record}
    if (record.fullName)
        h1(class="mb-4") #{record.fullName}
    if (record.email)
        div(class="mb-4") Email: <b>#{record.email}</b>
    if (record.phone)
        div(class="mb-4") Phone number: <b>#{record.phone}</b>
    if (record.role_id)
        div(class="mb-4 d-flex flex-column") 
            span Quyền truy cập: 
            <textarea rows="5" style="padding:10px">#{record_role.permissions.join(", ")}</textarea>
    if (record.createdAt)
        div(class="mb-4") Created At: 
            b 
                +formatDateTime(record.createdAt)
    if (record.status)
        div(
            class="mb-4" style="margin-right: 10px"
        )
            span Trạng thái:    
            if (record.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động
    a(
        class="btn btn-warning"
        href=`${prefixAdmin}/accounts/edit/${record.id}`
    ) Chỉnh sửa
    script(src="/admin/js/records.js") 