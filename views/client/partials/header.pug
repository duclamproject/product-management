include ../mixins/sub-menu.pug
header.header 
    .container 
        .row.align-items-center
            .col-2
                .inner-logo 
                    a(href="/") 
                        img(src="/images/online-shop.png", alt="logo")
            .col-5 
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa ... "
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm
            .col-5
                .inner-menu 
                    ul(class ="ul-nav")
                        li 
                            a(href="/") Trang chủ 
                        li(class="sub-menu")
                            -const pathProduct = "/products";
                            a(href="/products") Sản phẩm
                                +sub-menu(layoutProductsCategory, pathProduct)
                        li(class="cart")
                            a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : "0"}) 
                        if(user)
                            li 
                                a(href="/user/logout") Đăng xuất 
                        else
                            li(class="register")
                                a(href="/user/register") Đăng ký 
                            li(class="login")
                                a(href="/user/login") Đăng nhập 
                    
                            

