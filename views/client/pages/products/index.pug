extends ../../layouts/default.pug
include  ../../mixins/box-head.pug
block main 
    .container.my-3 
        .row    
            .col-12 
                +box-head("Danh sách sản phẩm")
        .row 
            each items in products
                .col-4.mb-3 
                    .product-item 
                        .inner-image 
                            img(
                                src= items.thumbnail,
                                alt = items.title
                            ) 
                        .inner-content 
                            a(
                                href=`/products/${items.slug}`
                            ) 
                                h3.inner-title #{items.title} 
                            .inner-price-new #{items.priceNew}$
                            .inner-price-old #{items.price}$
                            .inner-discount #{items.discountPercentage}%
            